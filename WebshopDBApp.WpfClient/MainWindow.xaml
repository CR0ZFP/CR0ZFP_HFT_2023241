<Window x:Class="WebshopDBApp.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebshopDBApp.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" >
            <Button Content="Open Customer dispacher" Margin="0,10,0,10" Background="LightBlue" Click="Button_Click"/>
            <Button Content="Open Order dispacher" Margin="0,10,0,10" Background="PaleGreen" Click="Button_Click_1"/>
            <Button Content="Open Product dispacher" Margin="0,10,0,10" Background="LightYellow" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Window>
